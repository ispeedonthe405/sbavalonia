<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="100"
             x:Class="sbavalonia.controls.OverlayTextBox"
			 Background="Transparent">

	<Grid VerticalAlignment="Center">
		
		<TextBlock Text="{Binding OverlaySymbol}"
				   VerticalAlignment="Center" Margin="3,0,0,0"
			   Background="Transparent" Foreground="{Binding OverlaySymbolColor}"/>
		
		<TextBox x:Name="tb" VerticalAlignment="Center" Margin="0" Padding="12,7,3,0"
				 Text="{Binding Text}" Foreground="{Binding TextColor}"/>

	</Grid>
	
</UserControl>
